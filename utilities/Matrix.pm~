#!/usr/bin/perl

use strict;
use warnings;

sub new {
  my $class = shift;

  my @row1 = shift;
  my @row2 = shift;
  my @row3 = shift;
  my @row4 = shift;

  my $this = bless {
    _row1 => \@row1,
    _row2 => \@row2,
    _row3 => \@row3,
    _row4 => \@row4,
  }, $class;

  return $this;
}

sub transform {
  my ($this, $point) = @_;

  my $x = ${$this->{_row1}}[0] * $point->fst() + ${$this->{_row1}}[1] * $point->snd() + ${$this->{_row1}}[2] * $point->trd() + ${$this->{_row1}}[3];

}
