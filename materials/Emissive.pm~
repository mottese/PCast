#!/usr/bin/perl

use strict;
use warnings;

package Material::Emissive;
use parent 'Material';

sub new {
  my $class = shift;
  my $this = bless {
    _ce => ,
    _ls => ,
  }, $class;
  return $this;
}

sub scale_radiance {
  my ($this, $ls) = @_;
}

sub ce {
  my $this = shift;
  if (@_) {
    $this->{_ce} = shift;
  }
  return $this->{_ce};
}

sub get_Le {
  my ($this, $shade_rec) = @_;
}


sub shade {
  my ($this, $shade_rec) = @_;

}

sub area_light_shade {
  my ($this, $shade_rec) = @_;

  if (-1 * $shade_rec->normal() * $shade_rec->ray()->direction() > 0.0) {
    return $this->{_ls} * $this->{_ce};
  }

  return new Triple(0, 0, 0); #black
}


1;
